<section class="cart py-16">
    <% if(session.cart) { %>
        <div class="order container mx-auto xl:w-1/2">
            <div class="flex items-container border-b border-gray-300 pb-4">
                <img class="w-10" src="/img/icon.PNG" alt="">
                <h1 class="font-bold mt-4 text-2xl">Order Summary</h1>
            </div>
            <div class="book-list">
    
                <% for(let book of Object.values(session.cart.items)) {%>
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%= book.item.image %>" alt="">
                        <div class="flex-1 ml-4">
                            <h1><%= book.item.name %></h1>
                            <span><%= book.item.publication %></span>
                        </div>
                        <span class="flex-1"><%= book.qty %> Qty</span>
                        <span class="font-bold text-lg">Rs. <%= book.item.price * book.qty %></span>
                    </div>
                <% } %>
                
            </div>
            <hr>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2">Rs. <%= session.cart.totalPrice %></span>
                </div>
                <% if(user) { %>
                <div>
                    <form action="/orders" method="POST" class="mt-12">
                        <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="number" placeholder="phone number">
                        <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                        <div>
                            <button class="btn-secondary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
    
                        </div>
                    </form>
                </div>
                <% } else { %>
                <a href="/login" class="inline-block cursor-pointer px-6 btn-secondary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
                <% } %>
            </div>
        </div>

    <% } else { %>
        <div class="empty-cart py-16">
            <div class="container mx-auto text-center">
                <h1 class="text-3xl font-bold mb-2">Cart Empty!!</h1>
                <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a book yet. <br>
                To order a book, go to the main page.</p>
                <img class="w-2/5 mx-auto" src="/img/man_cart.PNG" alt="empty-cart">
                <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">GO BACK!</a>
            </div>
        </div>
    <% } %>
    
    
</section>